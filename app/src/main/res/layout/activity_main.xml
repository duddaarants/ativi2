<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/fundo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="40dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:src="@drawable/ic_baseline_arrow_drop_down_circle_24"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPANY   NAME"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10sp"
            android:textAllCaps="false"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLOGAN HERE"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textColor="#ABEAE6E6"
            android:textAllCaps="false"
            />






        <Button
            android:id="@+id/btnEntrar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/botao_redondo"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="#F8F6F6"
            android:layout_margin="25dp"
            />

        <Button
            android:id="@+id/btnSair"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/botao_redondo"
            android:onClick="sairSistema"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:layout_margin="25dp"
            android:textColor="#F8F6F6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Social Media"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:layout_marginTop="150dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="60dp"
            android:layout_gravity="center"
            android:src="@drawable/facebook"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/twitter"
            />
</LinearLayout>

    </LinearLayout>


</LinearLayout>